<?xml version="1.0" encoding="utf-8"?>
<!--首页home_page布局-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20px"
            android:paddingVertical="10px"
            android:src="@drawable/icon2"
            android:clickable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="20dp"
            android:clickable="false"
            android:text="@string/introduction" />
        <Button
            android:id="@+id/bt_create_new"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:drawableLeft="@drawable/create"
            android:drawablePadding="5dp"
            android:text="@string/create_new"/>
        <Button
            android:id="@+id/bt_import_new"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:drawableLeft="@drawable/import_from_cloud"
            android:drawablePadding="5dp"
            android:text="@string/import_new"/>
        <Button
            android:id="@+id/bt_find_old"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="50dp"
            android:drawableLeft="@drawable/find_old"
            android:drawablePadding="5dp"
            android:text="@string/find_old"/>
    </LinearLayout>
</FrameLayout>

